@model HanaHotel.WebUI.DTOs.PromotionDTO.PromotionCreateDTO

@{
    ViewData["Title"] = "Sửa khuyến mãi";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    var rooms = ViewData["Rooms"] as List<SelectListItem> ?? new List<SelectListItem>();
    var selectedRoomIds = ViewBag.SelectedRooms as List<int> ?? new List<int>();
}

@*<h3>Sửa khuyến mãi</h3>*@

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PromotionID" />

    <div class="mb-3">
        <label>Tên khuyến mãi</label>
        <input asp-for="PromotionName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Số tiền giảm</label>
        <input asp-for="DiscountAmount" class="form-control" type="number" step="0.01" />
    </div>

    <div class="row mb-3">
        <div class="col">
            <label>Ngày bắt đầu</label>
            <input asp-for="StartDate" class="form-control" type="date" />
        </div>
        <div class="col">
            <label>Ngày kết thúc</label>
            <input asp-for="EndDate" class="form-control" type="date" />
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Chọn phòng áp dụng</label>
        @foreach (var room in ViewData["Rooms"] as List<SelectListItem>)
        {
            <div class="form-check">
                <input class="form-check-input"
                       type="checkbox"
                       name="SelectedRoomIds"
                       value="@room.Value"
                       id="room_@room.Value"
                @((ViewBag.SelectedRooms as List<int>).Contains(int.Parse(room.Value)) ? "checked" : "")>
                <label class="form-check-label" for="room_@room.Value">@room.Text</label>
            </div>
        }

        <small class="text-muted">Chọn nhiều phòng theo nhu cầu</small>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
