@using HanaHotel.EntityLayer.Concrete
@model List<HanaHotel.WebUI.DTOs.RoomDTO.ResultRoomDTO>

<div class="row g-3">
    @if (Model == null || !Model.Any())
    {
        <div class="col-12">
            <div class="alert alert-secondary">Không có phòng trống vào thời điểm này.</div>
        </div>
    }
    else
    {
        for (int i = 0; i < Model.Count; i++)
        {
            var room = Model[i];
            var img = room.ImagePaths?.FirstOrDefault() ?? "hotel-html-template/hotel-html-template.jpg";

            // Map status to friendly text + css class
            var (statusText, statusClass) = room.Status switch
            {
                RoomStatus.Available => ("Còn phòng", "bg-success text-white"),
                RoomStatus.Reserved => ("Đã đặt trước", "bg-secondary text-white"),
                RoomStatus.Occupied => ("Đang sử dụng", "bg-danger text-white"),
                RoomStatus.Maintenance => ("Bảo trì", "bg-warning text-dark"),
                _ => (room.Status.ToString(), "bg-secondary text-white")
            };

            var hasRooms = room.RoomCount > 0;
            <div class="col-12 mb-3">
                <div class="card shadow-sm" data-max-free-guests="3" data-extra-charge-per-person="100000">
                    <div class="row g-0 align-items-center">
                        <div class="col-md-4">
                            <img src="@Url.Content("~/" + img.TrimStart('~', '/'))" class="img-fluid rounded-start" style="height:160px; width:100%; object-fit:cover;" />
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h5 class="card-title mb-1"><a href="/Room/Detail/@room.Id" class="text-decoration-none">@room.RoomName</a></h5>

                                        @* Hotel name *@
                                        @if (!string.IsNullOrWhiteSpace(room.HotelName))
                                        {
                                            <div class="text-muted small mb-1">@room.HotelName</div>
                                        }

                                        <div class="d-flex align-items-center gap-2 mb-2">
                                            <div class="text-muted small">
                                                <span class="me-3"><i class="fa fa-ruler-combined text-primary"></i> @room.Size m2</span>
                                                <span class="me-3"><i class="fa fa-bed text-primary"></i> @room.BedCount giường</span>
                                            </div>

                                            @* Remaining rooms *@
                                            <div>
                                                @if (hasRooms)
                                                {
                                                    <div class="small bg-secondary text-white ms-2 p-1"><strong>Còn @room.RoomCount phòng</strong></div>
                                                }
                                                else
                                                {
                                                    <div class="small bg-danger text-white ms-2 p-1"><strong>Hết phòng</strong></div>
                                                }
                                            </div>
                                        </div>

                                        @* Services badges *@
                                        @if (room.Services != null && room.Services.Any())
                                        {
                                            <div class="mb-2">
                                                <small class="text-muted">Bao gồm:</small>
                                                <div class="mt-1">
                                                    @foreach (var s in room.Services.Take(5))
                                                    {
                                                        <span class="badge bg-light text-muted me-1">@s</span>
                                                    }
                                                    @if (room.Services.Count > 5)
                                                    {
                                                        <span class="badge bg-light text-muted">+@((room.Services.Count) - 5)</span>
                                                    }
                                                </div>
                                            </div>
                                        }

                                        <div class="mb-2 d-flex align-items-center gap-3">
                                            <div>
                                                <small class="text-muted">Giá:</small>
                                                <div class="fw-bold text-warning">@room.Price.ToString("N0") đ <small class="text-muted">/đêm</small></div>
                                            </div>

                                            @* Promotion badge (if any) *@
                                            @if (!string.IsNullOrWhiteSpace(room.PromotionName) || room.PromotionDiscountAmount.HasValue || room.PromotionDiscountPercent.HasValue)
                                            {
                                                <div>
                                                    <div class="badge bg-success text-white">
                                                        @if (room.PromotionDiscountPercent.HasValue && room.PromotionDiscountPercent.Value > 0)
                                                        {
                                                            @($"Giảm {room.PromotionDiscountPercent.Value:###}%")
                                                        }
                                                        else if (room.PromotionDiscountAmount.HasValue && room.PromotionDiscountAmount.Value > 0)
                                                        {
                                                            @($"Giảm {room.PromotionDiscountAmount.Value.ToString("N0")} đ")
                                                        }
                                                        else
                                                        {
                                                            @("Khuyến mãi")
                                                        }
                                                    </div>
                                                    @if (!string.IsNullOrWhiteSpace(room.PromotionName))
                                                    {
                                                        <div class="small text-muted mt-1">@room.PromotionName</div>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <div class="text-end">
                                        <button class="btn btn-warning btn-sm select-room-btn" type="button" data-bs-toggle="collapse" data-bs-target="#roomOptions-@i" aria-expanded="false" aria-controls="roomOptions-@i">
                                            Chọn phòng
                                        </button>
                                    </div>
                                </div>

                                @* Render collapse only when there are rooms available *@
                                @if (hasRooms)
                                {
                                    <div class="collapse mt-3" id="roomOptions-@i">
                                        <div class="border-top pt-3">
                                            <div class="row g-2 align-items-end">
                                                <input type="hidden" class="room-id" value="@room.Id" />
                                                <input type="hidden" class="room-price" value="@room.Price" />
                                                <input type="hidden" class="room-count" value="@room.RoomCount" />
                                                <input type="hidden" class="room-hotel-detail-id" value="@(room.HotelDetailId?.ToString() ?? "")" />
                                                @* promotion info transported to client *@
                                                <input type="hidden" class="room-promo-percent" value="@(room.PromotionDiscountPercent?.ToString() ?? "")" />
                                                <input type="hidden" class="room-promo-amount" value="@(room.PromotionDiscountAmount?.ToString() ?? "")" />
                                                <input type="hidden" class="room-promo-name" value="@(room.PromotionName ?? "")" />

                                                <div class="col-md-3">
                                                    <label class="form-label small">Số lượng phòng</label>
                                                    <input type="number" class="form-control room-quantity" min="1" max="@room.RoomCount" value="1" />
                                                </div>
                                                <div class="col-md-3">
                                                    <label class="form-label small">Người lớn</label>
                                                    <input type="number" class="form-control room-adult" min="1" value="1" />
                                                </div>
                                                <div class="col-md-3">
                                                    <label class="form-label small">Trẻ em</label>
                                                    <input type="number" class="form-control room-children" min="0" value="0" />
                                                </div>
                                                <div class="col-md-3 text-end">
                                                    <button class="btn btn-primary mt-1 add-to-cart-btn" type="button" data-index="@i">Thêm vào danh sách</button>
                                                </div>
                                            </div>

                                            <div class="mt-3 small text-muted">
                                                <i class="bi bi-info-circle"></i> 
                                                Phòng nhận 3 người, nhiều hơn 3 người sẽ tính thêm 100.000đ/người/đêm.
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>