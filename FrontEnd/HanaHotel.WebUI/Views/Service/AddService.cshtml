@model HanaHotel.WebUI.DTOs.ServiceDTO.CreateServiceDTO

@{
    ViewData["Title"] = "Thêm dịch vụ";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post" asp-action="AddService" asp-controller="Service">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-group mb-3">
        <label asp-for="ServiceName" class="form-label">Tên dịch vụ</label>
        <input asp-for="ServiceName" class="form-control" placeholder="Nhập tên dịch vụ" />
        <span asp-validation-for="ServiceName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label">Giá</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Nhập giá (số)" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Unit" class="form-label">Đơn vị</label>
        <input asp-for="Unit" class="form-control" placeholder="Ví dụ: VND, phòng, lần..." />
        <span asp-validation-for="Unit" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Mô tả</label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Mô tả (tuỳ chọn)"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label fw-bold">Chọn phòng áp dụng</label>

        <div class="border rounded p-3" style="max-height: 250px; overflow-y: auto;">
            @foreach (var room in ViewBag.Rooms)
            {
                <div class="form-check">
                    <input type="checkbox"
                           class="form-check-input"
                           name="RoomIds"
                           value="@room.Id" />

                    <label class="form-check-label">
                        @room.RoomName (Giá: @room.Price.ToString("N0") đ)
                    </label>
                </div>
            }
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Thêm dịch vụ</button>
        <a asp-controller="Service" asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
    </div>
</form>
